      <h1 class="text-center section-title">Editar produto:</h1>

      <%= render "form", product: @product %>

      <br>

      <div class="text-center mt-3">
        <%= link_to "Visualizar produto", @product, class:"btn btn-primary" %> |
        <%= link_to "Voltar para produtos listados", products_path, class:"btn btn-primary" %>
      </div>
    </section>
  </main>
